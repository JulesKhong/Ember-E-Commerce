<div class="col-sm-6">
  <h4>Review This Product:</h4>
  <form>
      <div class="form-group">
        <label for="comments">Feedback:</label><br>
        {{textarea value=comments id="comments"}}
      </div>
      <div class="form-group">
        <label for="rating">Rate This Product:</label><br>
        {{input value=rating id="rating"}}
      </div>
      <button class="btn btn-default"{{action 'saveReview'}}>Submit</button>
  </form>
</div>
