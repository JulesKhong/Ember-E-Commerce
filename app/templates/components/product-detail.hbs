<div class="col-sm-5">
  <img src={{product.image}} alt={{product.title}} />
</div>
<div class="col-sm-6">
<h4>{{product.title}}</h4>
<h5>Description:</h5>
<ul>
  <li>{{product.description}}</li>
</ul>
<p>${{product.price}}</p>
{{#if product.cartIncludes}}
  <hr>
  <h5>This item is now in your cart</h5>
  {{#link-to 'cart'}} View My Cart {{/link-to}}
  {{#link-to 'store'}}<p>Keep browsing</p>{{/link-to}}
{{else}}
  <button class="btn btn-default" {{action 'addToCart' product}}>Add to Cart</button>
{{/if}}
<hr>
</div>
