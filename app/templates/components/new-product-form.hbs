{{#if newProductForm}}
<h3>New product</h3>
<form>
  <div class="form-group">
    <label for="title">Title:</label><br>
    {{input value=title id="title"}}
  </div>
  <div class="form-group">
    <label for="description">Description:</label><br>
    {{textarea value=description id="description"}}
  </div>
  <div class="form-group">
    <label for="price">Price:</label><br>
    {{input value=price id="price"}}
  </div>
  <div class="form-group">
    <label for="image">Image URL:</label><br>
    {{input value=image id="image"}}
  </div>
  <button class="btn btn-default"{{action 'saveProduct'}}>Save</button>
</form>
<button class="btn btn-default"{{action 'hideProductForm'}}>Cancel</button>

{{else}}
  <button class="btn btn-sm btn-default"{{action 'newProductForm'}}>Add New Product</button>
{{/if}}
<hr>
